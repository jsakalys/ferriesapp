<p id="notice"><%= notice %></p>

<h1>Listing Ferries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ferries.each do |ferry| %>
      <tr>
        <td><%= ferry.name %></td>
        <td><%= link_to 'Show', ferry %></td>
        <td><%= link_to 'Edit', edit_ferry_path(ferry) %></td>
        <td><%= link_to 'Destroy', ferry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ferry', new_ferry_path %>
